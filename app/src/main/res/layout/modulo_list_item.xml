<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:weightSum="8">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/ivImagenModulo"
        android:src="@mipmap/nulo"
        android:layout_weight="2"
        android:contentDescription="@string/descripcion_imagen_modulos" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hint_nombre_modulo"
        android:id="@+id/tvNombreModulo"
        android:layout_weight="4"
        android:textColor="@color/negro"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="@string/hint_nombre_modulo"
        android:id="@+id/etNombreModulo"
        android:visibility="gone"
        android:layout_weight="4"
        android:textColor="@color/negro"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btEncenderApagarModulo"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/encender_btn"
        android:contentDescription="@string/descripcion_encender_apagar_modulo" />
</LinearLayout>